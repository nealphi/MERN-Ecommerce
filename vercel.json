{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      },
      {
        "src": "server/src/index.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/src/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }